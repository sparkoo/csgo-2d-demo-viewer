{
  "manifest_version": 3,
  "name": "FACEIT 2D Replay",
  "version": "0.4.0",
  "author": "sparko",
  "license": "MIT",
  "homepage_url": "https://github.com/sparkoo/csgo-2d-demo-viewer",
  "browser_specific_settings": {
    "gecko": {
      "id": "cs2-2d-replay-faceit-firefox@sparko.cz",
      "data_collection_permissions": {
        "required": [],
        "optional": []
      }
    }
  },
  "description": "View CS2 demo replays in 2D directly from FACEIT match pages in single click.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.faceit.com/*",
    "https://faceit.com/*",
    "https://*.faceit.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.faceit.com/*", "https://faceit.com/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FACEIT 2D Replay",
    "default_icon": "icons/icon_48.png"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
