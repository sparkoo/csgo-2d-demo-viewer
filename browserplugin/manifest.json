{
  "manifest_version": 3,
  "name": "CS2 Demo Viewer - FACEIT Integration",
  "version": "1.0.0",
  "description": "Adds demo analysis functionality to FACEIT pages",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.faceit.com/*",
    "https://faceit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.faceit.com/*",
        "https://faceit.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CS2 Demo Viewer",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
